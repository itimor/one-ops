[Unit]
Description=uWSGI instance to serve one-oms

[Service]
User=root
Group=root
WorkingDirectory=/data/projects/one-ops/backend
ExecStartPre=-/bin/mkdir -p /data/logs
ExecStart=/root/.pyenv/versions/envops/bin/uwsgi --ini /data/projects/one-ops/backend/systemd/uswgi/oms.ini --touch-reload=/usr/local/nginx/uwsgi_params
Restart=on-failure
KillSignal=SIGQUIT
Type=simple
NotifyAccess=all

[Install]
WantedBy=multi-user.target
